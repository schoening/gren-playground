init :
    Flags
    -> { model : Model
       , command : Cmd Msg
       }
init flags =
    let
        _ =
            Debug.log "flags" (Debug.toString flags)
    in
    { model =
        { sidebarWidth = 200
        , files = initialFiles
        , selectedFile = Nothing
        , folderName = flags.folderName
        }
    , command = Cmd.none
    }
