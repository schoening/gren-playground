module Init exposing ( init )

import Message exposing (..)
import Model exposing (..)


initialFiles : Array File
initialFiles =
    [ { name = "Main"
      , extension = "gren"
      , content =
            """
            module Main exposing ( main )
            
            import Html as H
            
            main =
                H.div
                    []
                    [ H.text "Hello, World!!!!!!!!!" ]
            """
